<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="default_text_small" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="default_text_small_italic" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="default_text_micro" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="default_text_small_url" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="small_highlighted_sha" parent="default_text_small_url">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="default_text_micro_url" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="LoadingProgress">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="MoreButton">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="SelectableItem">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableLabel" parent="@style/SelectableItem">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="HeaderLabel">
        <item name="android:background">?attr/headerUnderline</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.ActionBar.TabView" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>
    </style>

</resources>
