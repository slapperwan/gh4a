<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment_editor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/top_shadow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_advanced_editor_toggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="?expandIcon"/>

        <HorizontalScrollView
            android:id="@+id/markdown_buttons"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:visibility="gone">

        </HorizontalScrollView>

        <com.gh4a.widget.CommentEditor
            android:id="@+id/et_basic_editor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textMultiLine|textCapSentences"
            android:minHeight="48dp"
            android:padding="8dp"
            tools:text="Enter comment"/>

        <ImageView
            android:id="@+id/send_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="?sendIcon"/>

    </LinearLayout>

    <include layout="@layout/advanced_editor"/>

</LinearLayout>