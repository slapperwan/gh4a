<?xml version="1.0" encoding="utf-8"?>
<com.gh4a.widget.NestedCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/comment_advanced_editor_peek_height" />

    <com.gh4a.widget.EditorBottomSheet
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_peekHeight="@dimen/comment_editor_peek_height"
        app:layout_behavior="com.gh4a.widget.ToggleableBottomSheetBehavior" />

</com.gh4a.widget.NestedCoordinatorLayout>
