<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/advanced_editor_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/comment_bottom_sheet_height"
    android:orientation="vertical">

    <com.gh4a.widget.CommentEditor
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="top"
        android:layout_margin="8dp"
        android:inputType="textMultiLine|textCapSentences"
        tools:text="Enter comment" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/top_shadow" />

    <com.gh4a.widget.MarkdownButtonsBar
        android:id="@+id/markdown_buttons"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="?colorPrimary"
        android:layout_height="wrap_content"/>

</LinearLayout>